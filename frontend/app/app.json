{
	"expo": {
		"name": "Piggy split",
		"slug": "piggysplit",
		"version": "1.0.0",
		"orientation": "default",
		"icon": "./assets/images/piggysplit-app-icon.png",
		"scheme": "piggysplit",
		"userInterfaceStyle": "automatic",
		"newArchEnabled": true,
		"ios": {
			"supportsTablet": true,
			"bundleIdentifier": "com.piggysplit",
			"icon": {},
			"config": {
				"usesNonExemptEncryption": false
			}
		},
		"android": {
			"adaptiveIcon": {
				"backgroundColor": "#E6F4FE",
				"foregroundImage": "./assets/images/piggysplit-android-icon-foreground.png",
				"backgroundImage": "./assets/images/piggysplit-android-icon-background.png",
				"monochromeImage": "./assets/images/piggysplit-android-icon-foreground-mono.png"
			},
			"edgeToEdgeEnabled": true,
			"predictiveBackGestureEnabled": false,
			"package": "com.piggysplit"
		},
		"web": {
			"output": "static",
			"favicon": "./assets/images/piggysplit-app-icon.png"
		},
		"plugins": [
			"expo-router",
			[
				"expo-splash-screen",
				{
					"image": "./assets/images/piggysplit-app-icon.png",
					"imageWidth": 200,
					"resizeMode": "contain",
					"backgroundColor": "#F6C9BA",
					"dark": {
						"backgroundColor": "#000000"
					}
				}
			],
			"expo-secure-store",
			"expo-localization"
		],
		"experiments": {
			"typedRoutes": true,
			"reactCompiler": true
		}
	}
}
