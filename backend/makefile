.PHONY: schema
schema:
	@echo "ğŸ”„ Generating Go code from SQL schema..."
	@sqlc generate || (echo "âŒ sqlc failed!" && exit 1)
	@echo "âœ… sqlc generation complete."

.PHONY: run
run:
	set -a && . ./.env && go run ./cmd/server/main.go

.PHONY: build
build:
	@echo "ğŸ”„ Building image..."
	docker buildx build \
	--platform linux/amd64 \
	-t ghcr.io/jhelar/piggysplit:latest \
	--push .
	@echo "âœ… Image built"